<link href="https://fonts.googleapis.com/css2?family=Bungee+Tint&display=swap" rel="stylesheet">
    <title>Teleprompter Simples</title>
    <style>
            body {
            font-family: Arial, sans-serif;
             color:#fbffcd;
            text-align: center;
            overflow: hidden;
            background-color:#001f36;
        }
        #textContainer {
            width: 80%;
            margin: 20px auto;
            padding: 10px;
            white-space: pre-wrap;
            background: #f9f9f9;
            font-size: 20px;
            line-height: 1.6;
          background-color:#1c5560;
          border-radius: 10px;
          border: 2px solid #73AD21;
        }
        textarea {
            width: 80%;
            height: 100px;
            margin: 10px 0;
          background-color:#1c5560;
          border-radius: 10px;
          border: 2px solid #73AD21;
          color:#fbffcd;
        }
        #controls {
            position: fixed;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(255, 255, 255, 0.8);
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 10px;
          color:#2c6b74;
       
        }
        #savedTexts {
            margin: 10px auto;
          border-radius: 10px;
          padding: 10px;
          background-color:#2c6b74;
          color:#fbffcd;
          border: 2px solid #73AD21
        }
button{
  border: 2px solid #73AD21;
  border-radius: 10px;
          padding: 10px;
          background-color:#2c6b74;
          color:#fbffcd;
}
#textTitle{
  background-color:#001f36;
  border:0 none;
   font-family: "Bungee Tint", sans-serif;
  font-weight: 400;
  font-style: normal;
  text-align: center;
